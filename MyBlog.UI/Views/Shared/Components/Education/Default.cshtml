@using MyBlog.Entity.DTO.EducationDTO
@using MyBlog.Entity.Result
@model EducationWorkModel
<section id="resume" class="grey-section">
    <div class="row section-intro">
        <div class="col-twelve">
            <h5>Resume</h5>
            <h1>More of my credentials.</h1>
            <p class="lead">Lorem ipsum Do commodo in proident enim in dolor cupidatat adipisicing dolore officia nisi aliqua incididunt Ut veniam lorem ipsum Consectetur ut in in eu do.</p>
        </div>
    </div>
    <div class="row resume-timeline">
        <div class="col-twelve resume-header">
            <h2>İş Tecrübesi</h2>
        </div>
        @foreach (var item in Model.Work.Data)
        {
            <div class="col-twelve">
                <div class="timeline-wrap">
                    <div class="timeline-block">
                        <div class="timeline-ico">
                            <i class="fa fa-briefcase"></i>
                        </div>
                        <div class="timeline-header">
                            <img width="130" height="130" src="/images/@item.Photo" />
                            <h3>@item.Experience</h3>
                            <p>@item.StartingDate.ToString("MMMM-yyyy") - @item.EndingDate.ToString("MMMM-yyyy")</p>
                        </div>
                        <div class="timeline-content">
                            <h4>@item.CompanyName</h4>
                            <h5>@item.Title</h5>
                            <p>@item.Description</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="row resume-timeline">
        <div class="col-twelve resume-header">
            <h2>Eğitim</h2>
        </div>
        @foreach (var item in Model.Education.Data)
        {
            <div class="col-twelve">
                <div class="timeline-wrap">
                    <div class="timeline-block">
                        <div class="timeline-ico">
                            <i class="fa fa-graduation-cap"></i>
                        </div>
                        <div class="timeline-header">
                            <img width="130" height="130" src="/images/@item.Photo" />
                            <h3>@item.Degree</h3>
                            <h5>@item.Score</h5>
                            <p>@item.StartingDate.ToString("MMMM-yyyy") - @item.EndingDate.ToString("MMMM-yyyy")</p>
                        </div>
                        <div class="timeline-content">
                            <h4>@item.SchoolName</h4>
                            <h5>@item.Faculty</h5>
                            <h6>@item.Section</h6>
                            <p>@item.Description</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>