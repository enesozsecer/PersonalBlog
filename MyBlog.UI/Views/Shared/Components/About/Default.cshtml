@model AboutModel
<section id="about">

	<div class="row section-intro">
		<div class="col-twelve">

			<div class="col-twelve resume-header">
				<h2 style="color: deepskyblue;">Hakkımda</h2>
			</div>
			
			<div class="intro-info">

				<img src="~/images/@Model.About.Data.Photo" alt="Profile Picture">

				
			</div>

		</div>
	</div> <!-- /section-intro -->

	<div class="row about-content">

		<div class="col-six tab-full">

			<h3>Ben</h3>
			<p>@Model.About.Data.Resume</p>

			<ul class="info-list">
				<li>
					<strong>Ad Soyad:</strong>
					<span>@Model.About.Data.NameSurname</span>
				</li>
				<li>
					<strong>Doğum Tarihi:</strong>
					<span>@Model.About.Data.BirthDate.ToString("dd MMMM yyyy")</span>

				</li>
				<li>
					<strong>Telefon Numarası:</strong>
					<span>@Model.About.Data.PhoneNumber</span>
				</li>
				<li>
					<strong>Mail:</strong>
					<span>@Model.About.Data.Mail</span>
				</li>
				<li>
					<strong>MilitarySituation:</strong>
					<span>@Model.About.Data.MilitarySituation</span>
				</li>
				<li>
					<strong>Gender:</strong>
					<span>@Model.About.Data.Gender</span>
				</li>
				<li>
					<strong>Nationality:</strong>
					<span>@Model.About.Data.Nationality</span>
				</li>
				<li>
					<strong>Address:</strong>
					<span>@Model.About.Data.Address</span>
				</li>
				<li>
					<strong>DriverLicence:</strong>
					<span>@Model.About.Data.DriverLicence</span>
				</li>
				<li>
					<strong>Travelability:</strong>
					<span>@Model.About.Data.Travelability</span>
				</li>
				<li>
					<strong>MaritalStatus:</strong>
					<span>@Model.About.Data.MaritalStatus</span>
				</li>
			</ul> <!-- /info-list -->

		</div>

		<div class="col-six tab-full">
			<h3>Yeteneklerim</h3>
			@foreach (var item in Model.Skills.Data)
			{
				<ul class="skill-bars">
					<li>
						<div class="progress percent@{@item.Percentile}"><span>@item.Percentile%</span></div>
						<strong>@item.Name</strong>
					</li>
				</ul> <!-- /skill-bars -->
			}
			

			

		</div>

	</div>

	<div class="row button-section">
		<div class="col-twelve">
			<a href="#contact" title="Hire Me" class="button stroke smoothscroll">Bana Ulaş</a>
			<a href="~/Enes ÖZSEÇER.pdf" target="_blank" title="Download CV" class="button button-primary">CV (PDF)</a>
		</div>
	</div>

</section>